<?xml version="1.0"?>
<config>
    <modules>
        <Cvl_Manufacturer>
            <version>0.1.8</version>
        </Cvl_Manufacturer>
    </modules>
    <frontend>
        <routers>
            <manufacturer>
                <use>standard</use>
                <args>
                    <module>Cvl_Manufacturer</module>
                    <frontName>manufacturer</frontName>
                </args>
            </manufacturer>
        </routers>
        <layout>
            <updates>
                <manufacturer>
                    <file>manufacturer.xml</file>
                </manufacturer>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                    <args>
                    <modules>
                        <manufacturer after="Mage_Adminhtml">Cvl_Manufacturer_Adminhtml</manufacturer>
                        </modules>
                    </args>
                </adminhtml>    
        </routers>
    </admin>
    <adminhtml>
        <menu>
            <cvl module="manufacturer">
                <title>Cvl</title>
                <sort_order>45</sort_order>               
                <children>
                <manufacturerblock translate="title" module="manufacturer">
                    <title>Manage Manufacturers</title>
                    <action>adminhtml/manufacturer</action>
                    <sort_order>0</sort_order>
                </manufacturerblock>
                </children>
            </cvl>
        </menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Cvl_Manufacturer>
							<title>Manufacturer Module</title>
							<sort_order>10</sort_order>
						</Cvl_Manufacturer>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<manufacturer>
					<file>manufacturer.xml</file>
				</manufacturer>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <manufacturer>
                <class>Cvl_Manufacturer_Model</class>
                <resourceModel>manufacturer_mysql4</resourceModel>
            </manufacturer>
            <manufacturer_mysql4>
                <class>Cvl_Manufacturer_Model_Mysql4</class>
                <entities>
                    <manufacturer>
                        <table>cvl_manufacturer</table>
                    </manufacturer>
                </entities>
            </manufacturer_mysql4>
        </models>
        <resources>
            <manufacturer_setup>
                <setup>
                    <module>Cvl_Manufacturer</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </manufacturer_setup>
            <manufacturer_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </manufacturer_write>
            <manufacturer_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </manufacturer_read>
        </resources>
        <blocks>
            <manufacturer>
                <class>Cvl_Manufacturer_Block</class>
            </manufacturer>
        </blocks>
        <helpers>
            <manufacturer>
                <class>Cvl_Manufacturer_Helper</class>
            </manufacturer>
        </helpers>
    </global>
</config>